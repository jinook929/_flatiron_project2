<div class="container mt-5 mb-5 text-center">
  <h1>Choose a Country</h1>

<div class="dropdown mt-5 mb-5 d-flex justify-content-center">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false" style="width: 350px;">
    Countries
  </button>
  <ul class="dropdown-menu dropdown-menu-end">
    <% @countries.each do |country| %>
    <li><a class="dropdown-item" href="/countries/<%= country.id %>"><%= country.name %></a></li>
    <% end %>
  </ul>
</div>
<a href="/">back to main</a>
</div>
