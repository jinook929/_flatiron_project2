<h1 class="text-center mt-5 mb-5">Search Results</h1>

<% @results.each do |post| %>
  <a href="/posts/<%= post.id %>"><h2><%= post.title %></h2></a>
  <h4><%= post.content %></h4>
  <p><em>by <%= post.user.username %></em> at <%= post.created_at %></p>
  <% if post.updated_at != post.created_at %>
    <p>(updated @ <%= post.updated_at %>)</p>
  <% end %>
  <hr>
<% end %>
