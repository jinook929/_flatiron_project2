<h1 class="text-center mt-5 mb-5">Search Results for [ <%= @keyword %> ]</h1>

<div class="container">
  <% @results.each do |post| %>
    <a href="/posts/<%= post.id %>"><h3><%= post.title %></h3></a>
    <h5 class="text-truncate"><%= post.content %></h5>
    <p><em>by <%= post.user.username %></em> at <% if post.updated_at == post.created_at %><%= post.created_at %><% else %><%= post.updated_at %> (edited)<% end %></p>    
    <hr>
  <% end %>
  <h3 class="text-center text-black-50"><%= "No vlogs for this keyword." if @results.empty? %></h3>
</div>

